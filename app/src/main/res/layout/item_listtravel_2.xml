<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="74dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border_item_travel_2"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/idTravel"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|fill_horizontal|center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/nameTravel"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|fill_horizontal|center_vertical"
            android:text="TextView" />

        <ImageView
            android:id="@+id/btnImgUpdate"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/vector" />

        <ImageView
            android:id="@+id/btnImgRemove"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/vector__1_" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>